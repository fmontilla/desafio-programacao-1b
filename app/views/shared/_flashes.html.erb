<% if notice %>
  <div class="alert alert-info alert-dismissible flash-over" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible flash-over" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
<% end %>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    setTimeout(function() {
      $('.alert').fadeOut('fast');
    }, 2000);
  <% end %>
<% end %>
